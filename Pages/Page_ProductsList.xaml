<Page x:Class="TheUnknownGoose.Page_ProductsList"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TheUnknownGoose"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page_ProductsList" >

    <Grid Background="Azure">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="9*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <ListBox x:Name="listBoxShowChosenProducts"
                 Grid.Column="0"
                 Grid.ColumnSpan="2"
                 Grid.Row="0"
                 Grid.RowSpan="4"
                 BorderThickness="3"
                 Margin="10,10,10,10"
                 SelectionChanged="listBoxShowChosenProducts_SelectionChanged"/>

        <StackPanel Grid.Row="0"
                    Grid.Column="2"
                    Grid.ColumnSpan="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>                    
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <RadioButton Grid.Column="0" x:Name="radiobtnProducts"
                             GroupName="productDish"
                             Content="Product"
                             HorizontalAlignment="Left"
                             Width="76"
                             Margin="10"
                             Checked="radiobtnProducts_Checked"/>

                <RadioButton Grid.Column="0" Grid.Row="1" x:Name="radiobtnDishes"
                             GroupName="productDish"
                             Content="Dish"
                             HorizontalAlignment="Left"
                             Width="76"
                             Margin="10"
                             Checked="radiobtnDishes_Checked"/>

                <ComboBox Grid.Column="1" x:Name="comboBoxChosenCategory"
                          Height="20"
                          Width="250"
                          Padding="0"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Top"
                          Text="Category"
                          Margin="10"                          
                          SelectionChanged="comboBoxChosenCategory_SelectionChanged"/>
            </Grid>
        </StackPanel>

        <Grid Grid.Column="2"
                    Grid.Row="1"
                    Grid.ColumnSpan="2">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>


        <TextBox Grid.Column="0"
                     Width="50"
                     Height="20"
                     Name="textBoxShowKcal"
                     Margin="5"
                     VerticalAlignment="Top"
                     HorizontalAlignment="Left"
                     IsReadOnly="True"
                     Padding="0"
                     Cursor="Arrow"/>

        <Label Content="Kcal"
                   Grid.Column="1"
                   Margin="5"
                   Width="25"
                   Height="20"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                   Padding="0"/>

        <TextBox Grid.Column="2"
                     Width="150"
                     Height="20"
                     Name="textBoxShowMeasure"
                     VerticalAlignment="Top"
                     HorizontalAlignment="Left"
                     Margin="5"
                     IsReadOnly="True"
                     Padding="0"
                     Cursor="Arrow"/>
    </Grid>

    <Grid Row="3"
              Column="3"
              Margin="10,10,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Button Name="btnAdd"
                    Content="Add"
                    Grid.Row="1"
                    Grid.Column="0"
                    Click="BtnAddClick"/>

            <Button Name="btnEdit"
                    Content="Edit"
                    Grid.Row="1"
                    Grid.Column="1"
                    Click="BtnEditClick"/>

            <Button Name="btnDelete"
                    Content="Delete"
                    Grid.Row="1"
                    Grid.Column="2"
                    Click="BtnDeleteClick"/>
        </Grid>
    </Grid>
</Page>