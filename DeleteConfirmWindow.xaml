<Window x:Class="TheUnknownGoose.DeleteConfirmWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheUnknownGoose"
        mc:Ignorable="d"
        Title="Confirm Deleting" Height="150" Width="220" ShowInTaskbar="False" ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner" ScrollViewer.VerticalScrollBarVisibility="Disabled" AutomationProperties.Name="DeleteConfirmWindow">
    <Grid>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="155,81,0,0"
                VerticalAlignment="Top" Width="40" Height="20" IsCancel="True" Click="btnCancelClick"/>

        <Button Content="Delete" HorizontalAlignment="Left" Margin="10,81,0,0"
                VerticalAlignment="Top" Width="40" Height="20" IsDefault="True" Click="btnDeleteClick"/>

        <TextBox HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap"
                 Text="Are you sure that you want to delete this item?" VerticalAlignment="Top"
                 Width="185" Height="57" IsReadOnly="True" FontWeight="DemiBold"
                 HorizontalScrollBarVisibility="Disabled" HorizontalContentAlignment="Center"
                 VerticalContentAlignment="Center"/>

    </Grid>
</Window>
